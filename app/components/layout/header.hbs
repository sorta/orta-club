<div class="bg-purple-700">
  <div class="container mx-auto px-4 py-2 flex justify-between">
    <h1 class="text-white text-2xl">Orta Club</h1>
    {{#if this.auth.isAuthenticated}}
      <button
        type="button"
        class="border border-1 border-white-700 text-white rounded-md px-2 py-1"
        {{on 'click' (perform this.auth.logoutTask)}}
      >Logout</button>
    {{/if}}
  </div>
</div>